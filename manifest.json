{
  "manifest_version": 3,
  "name": "DigiJump",
  "version": "0.4.3",
  "description": "A Chrome/Chromium Browser Extension providing a quick jump between Jira Tickets, GitHub PRs and DynEnv.",
  "homepage_url": "https://github.com/dsentker24/ds24-jump",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "assets/icon-32.png",
      "36": "assets/icon-36.png",
      "48": "assets/icon-48.png",
      "196": "assets/icon-196.png"
    }
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "options_page": "options.html",
  "omnibox": {
    "keyword": "ds24"
  },
  "background": {
    "service_worker": "assets/service_worker.js"
  },
  "host_permissions": [
    "https://github.com/*",
    "http://github.com/*",
    "https://*.dev.ds25.io/*",
    "http://*.dev.ds25.io/*",
    "https://digistore.atlassian.net/*",
    "http://digistore.atlassian.net/*"
  ],
  "icons": {
    "32": "assets/icon-32.png",
    "36": "assets/icon-36.png",
    "48": "assets/icon-48.png",
    "196": "assets/icon-196.png"
  }
}
